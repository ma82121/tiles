{
  "vetur.validation.template": true,
  "eslint.validate": [
    {
      "language": "vue",
      "autoFix": true
    },
    {
      "language": "html",
      "autoFix": true
    },
    {
      "language": "javascript",
      "autoFix": true
    }
  ],
  // "[javascript]": {
  //   "editor.formatOnSave": true
  // },
  "eslint.autoFixOnSave": true,
  "prettier.semi": false,
  "prettier.singleQuote": true,
  "editor.tabSize": 2,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  }
}